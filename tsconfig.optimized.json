{
  "compilerOptions": {
    // TypeScript 5.9 + Node.js v20 Optimizations
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "lib": ["ES2022", "WebWorker"],

    // Performance Optimizations
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "assumeChangesOnlyAffectDirectDependencies": true,

    // Emit Configuration
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "removeComments": true,

    // Type Checking - Strictest settings
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "useUnknownInCatchVariables": true,

    // Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    // Module Resolution
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "resolvePackageJsonExports": true,
    "resolvePackageJsonImports": true,

    // TypeScript 5.9 Features
    "allowArbitraryExtensions": true,
    "customConditions": ["worker", "workerd"],

    // Optimization Hints
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false,

    // Path Aliases
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/services/*": ["./src/services/*"],
      "@/adapters/*": ["./src/adapters/*"],
      "@/handlers/*": ["./src/handlers/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/lazy/*": ["./src/lib/lazy/*"]
    },

    // Type Definitions
    "types": ["@cloudflare/workers-types", "node"],

    // Source Maps for debugging
    "sourceMap": false,
    "inlineSources": false,

    // Experimental
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false
  },

  // TypeScript 5.9 Project References for faster builds
  "references": [
    { "path": "./src/core" },
    { "path": "./src/connectors" },
    { "path": "./src/adapters" }
  ],

  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json", "src/**/*.mts"],

  "exclude": [
    "node_modules",
    "dist",
    ".wrangler",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.bench.ts",
    "scripts/**/*",
    "website/**/*"
  ],

  // Watch Options for development
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": false,
    "excludeDirectories": ["node_modules", ".wrangler", "dist"]
  },

  // TypeScript 5.9 Build Options
  "ts-node": {
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node",
    "esm": true
  }
}
